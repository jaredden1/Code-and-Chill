<%- include('../partials/header') %>

<table id="list">
    <thead>
      <tr>
        <th>Food</th>
        <th>Category</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% foods.forEach(function(f) { %>
        <tr>
          <td><%= f.name %></td>
          <td><%= f.category %></td>
          <td><a href="/foods/<%= f._id %>">DETAILS</a></td>
          <td><form action ="/foods<%= f._id %>?_method=DELETE"
          class="delete-form" method="POST">
            <button type="'submit">Remove</button>
      </form></td>
        </tr>
        <% }); %>
      </tbody>
    </table>

<%- include('../partials/footer') %>
